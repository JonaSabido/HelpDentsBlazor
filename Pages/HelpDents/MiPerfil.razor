<div class="container">
    <div id="sd">
        
            <div class="row">
                <div class="col-sm-2">
                <span class="oi oi-person" id="icon-user" />
            </div>
            <div class="col-sm-10">
                <h1 id="nameUser"> Nombre de usuario </h1>
            </div>
            </div>



            <form class="container">
                <div class="mb-2">
                    <label class="form-label" for="Nombre" > Nombres </label>
                    <input type="text" class="form-control"  id="name" required>
                </div>

                <div class="mb-2">
                    <label class="form-label" for="name">Apellidos</label>
                    <input type="text" class="form-control"  id="apellido" required>
                </div>

                <div class="mb-2">
                    <label class="form-label" for="name">Correo</label>
                    <input type="email" class="form-control"  id="correo" required>
                </div>

                <div class="mb-2">
                    <label class="form-label" for="name">Contraseña</label>
                    <input type="password" class="form-control"  id="contraseña" required>
                </div>

                <button type="submit" id="btn-save">Guardar </button>
                <button id="btn-edit">Editar </button>

            </form>

    </div>
</div>

